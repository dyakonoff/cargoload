<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="io.dyakonoff.cargoload.web.cargobay.CargoBayBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="io.dyakonoff.cargoload.web.cargobay">
    <dsContext>
        <datasource id="cargoBayDs"
                    class="io.dyakonoff.cargoload.entity.CargoBay"
                    view="cargoBay-edit">
            <datasource id="shipDs"
                        property="ship"/>
        </datasource>
        <groupDatasource id="cargoBaysDs"
                         class="io.dyakonoff.cargoload.entity.CargoBay"
                         view="cargoBay-view">
            <query>
                <![CDATA[select e from cargoload$CargoBay e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="cargoBaysDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="maxLoad"/>
                    </columns>
                    <rows datasource="cargoBaysDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="cargoBayDs">
                        <column width="250px">
                            <field property="name"/>
                            <field property="ship"/>
                            <field property="maxLoad"/>
                            <field description="sq. meters"
                                   property="bayArea"/>
                            <field property="foreAndAftPosition"/>
                            <field property="athwartshipPosition"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
